<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.pocomartins.baskete.MainActivity">

    <TextView
        android:id="@+id/timea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time A"
        android:gravity="center"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/placaTimeA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:padding="4dp"/>

    <Button
        android:id="@+id/tresPontosA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+3 pontos"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/doisPontosA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2 pontos"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/tiroslivresA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiro Livre"
        android:layout_margin="8dp"/>


</LinearLayout>
